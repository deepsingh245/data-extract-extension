{
    "manifest_version": 3,
    "name": "LinkedIn Company Data Extractor",
    "version": "1.0",
    "description": "Extracts company information from LinkedIn company pages.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.linkedin.com/*"
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  